.choose-tip-shadow {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.3);
  position: absolute;
  top: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-transition: all 0.6s ease-in-out;
}

.choose-tip-shadow.hidden {
  display: none;
}

.choose-panel {
  width: 75%;
  height: auto;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  position: relative;
}

.dismiss_wrapper {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 0px;
  right: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dismiss {
  width: 15px;
  height: 15px;
}

.case-name-tips {
  width: 100%;
  height: 30px;
  font-size: 14px;
  text-align: center;
  line-height: 30px;
}

.standard-title {
  width: 100%;
  height: 10px;
  font-size: 10px;
  line-height: 10px;
  margin-top:10px; 
  margin-bottom:10px;
}

.case-standard-tag-wrapper {
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.case-standard-tag {
  width: 50px;
  height: 20px;
  line-height: 20px;
  border: 1px solid #E4E4E4;
  border-radius: 10px;
  color: #000000;
  font-size: 12px;
  text-align: center;
  margin-right: 5px;
  margin-bottom: 5px;
}

.case-standard-tag-selected {
  width: 50px;
  height: 20px;
  line-height: 20px;
  border: 1px solid #4F4C4C;
  border-radius: 10px;
  color: #ffffff;
  background-color: #4F4C4C;
  font-size: 12px;
  text-align: center;
  margin-right: 5px;
  margin-bottom: 5px;
}

.pannel-footer-wrapper {
  margin-top: 10px;
  width: 100%;
  height: 30px;
  position: relative;
  /*position: absolute;
  left: 0px;
  bottom: 0px;*/
  display: flex;
  align-items: center;
}

.case-price-tip {
  width: auto;
  height: 30px;
  line-height: 30px;
  font-size: 18px;
  color: #de5245;
  margin-left: 10px;
}

.choosed-standard-tip {
  width: auto;
  height: 30px;
  line-height: 30px;
  font-size: 10px;
  margin-left: 5px;
}

.add-tip-wrapper{
  width: 75px;
  height: 25px;
position: absolute;
top:0px;
right: 10px;
}

.add-cart-tip {
  width: auto;
  height: 25px;
  line-height: 25px;
  font-size: 11px;
  right: 0px;
  top: 0px;
  position: absolute;
  border-radius: 12.5px;
  color: #fff;
  background-color: #4f4c4c;
  padding-left: 10px;
  padding-right: 10px;
}
