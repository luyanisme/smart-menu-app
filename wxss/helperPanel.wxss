.helper-panel-shadow {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.3);
  position: absolute;
  top: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-transition: all 0.6s ease-in-out;
}

.helper-panel-shadow.hidden {
  display: none;
}