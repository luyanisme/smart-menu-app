.progress-bar{
  width: auto;
  height:30px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: row;
  position: absolute;
  bottom: 10px;
  left: 10px;
}

.dot{
  width: 6px;
  height: 6px;
  background-color: #6AD118;
}

.line{
  width: 160px;
  height: 2px;
  background-color: #6AD118;
}

.start{
  bottom: 0px;
  left: 0px;
  color: #6AD118;
}

.doing{
  bottom: 0px;
}

.complete{
  bottom: 0px;
  right: 0px;
}

.text-style{
  font-size: 10px;
  position: absolute;
}