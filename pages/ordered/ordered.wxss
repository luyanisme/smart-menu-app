/* ordered.wxss */
page {
  height: 100%;
  overflow: hidden;
}

.wrapper {
  height: 100%;
  overflow: hidden;
  background-color: #F9F9F9;
  display: flex;
  flex-direction: column;
  /*display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;*/
}

.orders-container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.orders-container scroll-view {
  width: 100%;
  height: 90%;
}

.order-case-item {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  background-color: #fff;
}

.order-title-wrapper {
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  justify-content: center;
  width: 150px;
  height: 100%;
  margin-left: 10px;
}

.order-title {
  width: 150px;
  font-size: 15px;
}

.order-properties {
  margin-top: 3px;
  width: 150px;
  font-size: 10px;
  color: #a4a4a4;
  margin-left: 10px;
}

.order-price {
  margin-left: 0px;
  color: #ff5e24;
  font-size: 15px;
}

.add-remove-wrapper {
  width: 75px;
  height: 25px;
  position: absolute;
  right: 10px;
  top: 12.5px;
}

.oerder-num{
  height: 50px;
  position: absolute;
  right: 10px;
  top: 0px;
  text-align: center;
  font-size: 13px;
line-height: 50px;
}

.h_line {
  width: 100%;
  height: 1px;
  background-color: #f4f4f4;
  left: 10px;
  bottom: 0px;
  position: absolute;
}

.h_line_dash {
  width: 100%;
  height: 0px;
  border-bottom: 1px dashed #000;
}

.totalPrice {
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}

.totalPrice text {
  margin-right: 10px;
}