page {
  height: 100%;
  overflow: hidden;
}

.wrapper {
  height: 100%;
  overflow: hidden;
  /*display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;*/
}

.col-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.left-col {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #4f4c4c;
}

.left-col scroll-view {
  height: 100%;
}

.right-col {
  height: 100%;
  width: 75%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.right-col scroll-view {
  height: 100%;
}

.left-item-selected {
  display: flex;
  align-items: center;
  width: 100%;
  height: 45px;
  background-color: #fff;
}

.left-item-disselected {
  display: flex;
  align-items: center;
  width: 100%;
  height: 45px;
  background-color: #4f4c4c;
}

.left-item-block {
  width: 5px;
  height: 25px;
  background-color: #4f4c4c;
}

.left-item-title-selected {
  font-size: 15px;
  color: #4f4c4c;
  margin-left: 10px;
}

.left-item-title-disselected {
  font-size: 15px;
  color: #fff;
  margin-left: 10px;
}

.right-item {
  width: 100%;
  height: 90px;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.case-img {
  width: 70px;
  height: 70px;
  margin-left: 10px;
  background-color: #000;
}

.info-container {
  width: 90px;
  height: 70px;
  margin-left: 10px;
  position: relative;
}

.case-name {
  width: auto;
  height: auto;
  color: #000;
  font-size: 16px;
  left: 0px;
  top: 0px;
  position: absolute;
}

.case-ordered {
  width: auto;
  height: auto;
  color: #a3a3a3;
  font-size: 12px;
  left: 0px;
  bottom: 25px;
  position: absolute;
}

.case-price {
  width: auto;
  height: auto;
  color: #ff5e24;
  font-size: 16px;
  left: 0xp;
  bottom: 0px;
  position: absolute;
}

.button-wrap {
  width: 75px;
  height: 25px;
  position: absolute;
  bottom: 10px;
  right: 10px;
  justify-content: space-between;
}

.add_btn {
  width: 25px;
  height: 25px;
  position: absolute;
  right: 0px;
  bottom: 0px;
}

.order-nums {
  width: 25px;
  height: 25px;
  font-size: 15px;
  color: #000;
  text-align: center;
  line-height: 25px;
  position: absolute;
  left: 25px;
  bottom: 0px;
}

.order-nums.hidden {
  display: none;
}

.remove_btn {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 0px;
  bottom: 0px;
}

.remove_btn.hidden {
  display: none;
}

.choose-standard {
  width: 45px;
  height: 25px;
  border-radius: 20px;
  background-color: #4f4c4c;
  color: #fff;
  font-size: 11px;
  position: absolute;
  bottom: 0;
  right: 0px;
  text-align: center;
  line-height: 25px;
}

.badge-nums {
  width: 15px;
  height: 15px;
  border-radius: 7.5px;
  background-color: #de5245;
  color: #fff;
  font-size: 10px;
  position: absolute;
  top: -5px;
  right: 0px;
  text-align: center;
  line-height: 15px;
}

.badge-nums.hidden {
  display: none;
}

.h_line {
  width: 100%;
  height: 1px;
  background-color: #f4f4f4;
  left: 10px;
  bottom: 0px;
  position: absolute;
}

.footer-cart {
  width: 100%;
  height: 50px;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: row;
}

.left-footer-cart-wrapper {
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
}

.cart-wrapper {
  width: 40px;
  height: 40px;
  margin-left: 10px;
  position: relative;
}

.cart-wrapper image {
  width: 100%;
  height: 100%;
}

.footer-cart-badge {
  width: 15px;
  height: 15px;
  border-radius: 7.5px;
  line-height: 15px;
  font-size: 10px;
  color: #fff;
  background-color: #de5245;
  text-align: center;
  position: absolute;
  top: -2px;
  right: -5px;
}

.footer-cart-badge.hidden {
  display: none;
}

.total_price {
  margin: 10px;
  font-size: 20px;
  color: #ff5e24;
}

.right-footer-cart-wrapper {
  width: 30%;
  height: 100%;
  position: relative;
}

.complete {
  width: 100%;
  height: 100%;
  color: #fff;
  background-color: #A4A4A4;
  text-align: center;
  line-height: 50px;
  font-size: 18px;
  position: absolute;
  left: 0px;
  top: 0px;
}

.mask {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.3);
  position: absolute;
  left: 0px;
  display: flex;
  -webkit-transition: all 0.6s ease-in-out;
  bottom: 50px;
}

.mask.hidden {
  display: none;
}

.mask scroll-view {
  position: absolute;
  max-height: 250px;
  bottom: 0px;
  left: 0px;
}

.add-remove-wrapper {
  width: 75px;
  height: 25px;
  position: absolute;
  right: 10px;
  top: 12.5px;
}

.order-case-item {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  background-color: #fff;
}

.order-title-wrapper{
  display: flex;
    flex-direction: column;
  /*align-items: center;*/
  justify-content: center;
width: 150px;
height: 100%;
margin-left: 10px;
}

.order-title {
  width: 150px;
  font-size: 15px;
}

.order-properties{
  margin-top: 3px;
width: 150px;
  font-size: 10px;
  color:#a4a4a4;
  margin-left: 10px;
}

.order-price {
  margin-left: 40px;
  color: #ff5e24;
  font-size: 15px;
}

