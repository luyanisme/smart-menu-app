page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.wrapper {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.desktop-num-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ordered-wrapper {
  position: absolute;
  width: 50px;
  height: 25px;
  color: #4f4c4c;
  right: 10px;
  top: 20px;
}

.badge {
  width: 15px;
  height: 15px;
  font-size: 11px;
  position: absolute;
  background-color: #de5245;
  right: 0px;
  top: 0px;
  border-radius: 12.5px;
  text-align: center;
  line-height: 15px;
  color: #fff;
  display: none;
}

.badge.show {
  display: block;
}

.ordered {
  width: 50px;
  height: 25px;
  text-align: center;
  line-height: 25px;
  font-size: 18px;
  color: #4f4c4c;
  position: absolute;
  left: 0px;
  top: 0px;
}

.desktop-num-is {
  margin-top: 50px;
  color: #a4a4a4;
}

.desktop-num {
  width: 75%;
  height: 100px;
  line-height: 100px;
  text-align: center;
  font-size: 55px;
  font-weight: bold;
  color: #fff;
  background-color: #4f4c4c;
  border-radius: 50px;
  margin-top: 20px;
}

.h-line {
  width: 90%;
  height: 1px;
  background-color: #f4f4f4;
  margin-top: 20px;
}

.content-wrapper {
  width: 90%;
  margin-top: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avater-wrapper {
  width: 300px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.avater-name-wrapper {
  width: 60px;
  height: 75px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avater-name-wrapper text {
  margin-top: 5px;
  color: #000;
  font-size: 12px;
}

.avater {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background-color: #fff;
}

.continue-order {
  margin-top: 20px;
  color: #fff;
  width: 90%;
  height: 50px;
  background-color: #41c432;
  border-radius: 25px;
  font-size: 20px;
}

.choose-tip-shadow {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.3);
  position: absolute;
  top: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-transition: all 0.6s ease-in-out;
}

.choose-tip-shadow.hidden {
  display: none;
}

.orders-container {
  width: 80%;
  height: 70%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.orders-container scroll-view {
  width: 100%;
  height: 90%;
}

.order-case-item {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  background-color: #fff;
}

.order-title-wrapper {
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  justify-content: center;
  width: 150px;
  height: 100%;
  margin-left: 10px;
}

.order-title {
  width: 150px;
  font-size: 15px;
}

.order-properties {
  margin-top: 3px;
  width: 150px;
  font-size: 10px;
  color: #a4a4a4;
  margin-left: 10px;
}

.order-price {
  margin-left: 0px;
  color: #ff5e24;
  font-size: 15px;
}

.add-remove-wrapper {
  width: 75px;
  height: 25px;
  position: absolute;
  right: 10px;
  top: 12.5px;
}

.oerder-num{
  height: 50px;
  position: absolute;
  right: 10px;
  top: 0px;
  text-align: center;
  font-size: 13px;
line-height: 50px;
}

.add_btn {
  width: 25px;
  height: 25px;
  position: absolute;
  right: 0px;
  bottom: 0px;
}

.order-nums {
  width: 25px;
  height: 25px;
  font-size: 15px;
  color: #000;
  text-align: center;
  line-height: 25px;
  position: absolute;
  left: 25px;
  bottom: 0px;
}

.remove_btn {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 0px;
  bottom: 0px;
}

.h_line {
  width: 100%;
  height: 1px;
  background-color: #f4f4f4;
  left: 10px;
  bottom: 0px;
  position: absolute;
}

.h_line_dash {
  width: 100%;
  height: 0px;
  border-bottom: 1px dashed #000;
}

.totalPrice {
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}

.totalPrice text {
  margin-right: 10px;
}
