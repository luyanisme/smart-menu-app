page {
  height: 100%;
  overflow: hidden;
}

.wrapper {
  height: 100%;
  overflow: hidden;
  background-color: #F9F9F9;
  display: flex;
  flex-direction: column;
  /*display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;*/
}

.banner-wrap {
  width: 100%;
  height: 150px;
  -webkit-transition: all 0.6s ease-in-out;
}

.banner-wrap.hidden {
  margin-top: -150px;
}

.banner {
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
}

.cate-wrapper{
display: flex;
flex-direction: row;
flex-wrap: wrap;
margin-top: 10px; 
background-color: #fff;
}

.cate-item{
    width: 50%;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
position: relative;

}

.icon_wrapper{
width: 40px;
height: auto;
display: flex;
flex-direction: column;
align-items: center;
}

.icon_wrapper image{
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.cate-title{
  color: #000;
  font-size: 13px;
  margin-top: 5px;
}

.case-num{
  color: #a4a4a4;
  font-size: 10px;
  margin-top: 5px;
}

.h_bottom_line{
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height:1px;
  background-color: #f4f4f4;
}

.v_right_line{
  position: absolute;
  top: 0px;
  right: 0px;
  width: 1px;
  height:100%;
  background-color: #f4f4f4;
}
