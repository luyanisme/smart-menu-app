      <view class="case-item">
        <image class="case-img" src="http://127.0.0.1:8080/{{item.caseImagePath}}" mode="aspectFill"></image>
        <view class="info-wrapper">
        <text class="info-title">{{item.caseName}}</text>
        <text class="info-price">ï¿¥{{item.casePrice}}</text>
        </view>
      </view>
    </view>
    </block>
  </view>
  </scroll-view>
</view>