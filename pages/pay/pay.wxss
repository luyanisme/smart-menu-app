/* pay.wxss */
page {
  height: 100%;
  overflow: hidden;
}

.wrapper {
  height: 100%;
  overflow: hidden;
  background-color: #F9F9F9;
  display: flex;
  flex-direction: column;
  /*display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;*/
}

.pay-btn{
  position: absolute;
  width: 100%;
  height: 45px;
  background-color: #48C13E;
  left: 0px;
  bottom: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pay-btn text{
color: white;
font-size: 15px;
}

.orders-container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 45px; 
}

.order-title-wrapper {
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  justify-content: center;
  width: 150px;
  height: 100%;
  margin-left: 10px;
}

.orders-container scroll-view {
  width: 100%;
  height: 90%;
}

.order-case-item {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  background-color: #fff;
}

.h_line_dash {
  width: 100%;
  height: 0px;
  border-bottom: 1px dashed #000;
}

.totalPrice {
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}

.totalPrice text {
  margin-right: 10px;
}

.h_line {
  width: 100%;
  height: 1px;
  background-color: #f4f4f4;
  left: 10px;
  bottom: 0px;
  position: absolute;
}

.add-remove-wrapper {
  width: 75px;
  height: 25px;
  position: absolute;
  right: 10px;
  top: 12.5px;
}

.add_btn {
  width: 25px;
  height: 25px;
  position: absolute;
  right: 0px;
  bottom: 0px;
}

.order-nums {
  width: 25px;
  height: 25px;
  font-size: 15px;
  color: #000;
  text-align: center;
  line-height: 25px;
  position: absolute;
  left: 25px;
  bottom: 0px;
}

.remove_btn {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 0px;
  bottom: 0px;
}